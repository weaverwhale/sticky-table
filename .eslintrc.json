{
  "parser": "esprima",
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "React": true,
    "mount": true,
    "shallow": true,
    "context": true,
    "expect": true,
    "jsdom": true,
    "JSX": true
  },
  "rules": {
    "no-unused-vars": 0,
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": false
      }
    ]
  }
}
